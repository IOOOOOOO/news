.news_container{
  display: flex;
  flex-direction: column;
  padding: 0 0 10rpx;
  margin: 20rpx 0 40rpx 0;
  border-top: 1px solid #ededed;
  border-bottom:1px solid #ededed;
  background: #fff;
}
.news_authorAnddate{
  display: flex;
  margin: 20rpx 10rpx 10rpx;
  align-items: center;
}
.news_author{
  width: 60rpx;
  height: 60rpx;
}
.news_date{
  margin-left: 20rpx;
  font-size: 26rpx;
}
.news_title{
  margin: 0 20rpx 10px; /* 水平方向的间距一般采用rpx */
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.news_img{
  width: 100%;
  height: 340rpx;
}
.news_content{
  margin: 15px 20rpx;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
}
.news_like{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin: 0 20rpx;
}
.news_like-icon{
  width: 32rpx;
  height: 32rpx;
}
.news_like-text{
  margin: 0 40rpx 0 16rpx;
}