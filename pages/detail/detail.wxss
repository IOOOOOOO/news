/* pages/content/content.wxss */
.content_contaier{
  display: flex;
  flex-direction: column;
  /* width: 100%; */
}
.content_img{
  width: 100%;
  height: 460rpx;
}
.hide{
  opacity: 0;
}
.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
.content_authorAnddate{
  display: flex;
  align-items: center;
  margin: 20rpx 30rpx;
}
.content_authorImg{
  width: 64rpx;
  height: 64rpx;
}
.content_authorName{
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
}
.content_date{
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #999;
}
.content_title{
  margin: 0 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}
.content_tool{
  width: 100%;
  margin: 20rpx 0;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.content_toolImg{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.content_toolImg image{
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}
.content_toolline{
  position: relative;
  bottom:45rpx;
  width: 100%;
  height: 1px;
  background: #e5e5e5;
  z-index: -1;
}
.content_text{
  display: block;
  padding: 0 30rpx 50rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  line-height: rpx;
  letter-spacing: 2px;
}