/* pages/flex.wxss */
page{
  height: 100%;
  background: #b3d4db;
}
.container{
  display: flex;
  width: 100%;
  height: 500rpx;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: space-around;
}
.viewItem{
  width: 300rpx;
  height: 200rpx;
}
.viewItem:nth-of-type(1){
  background: red;
}
.viewItem:nth-of-type(2){
  background: blue;
}
.viewItem:nth-of-type(3){
  background: yellow;
}
.viewItem:nth-of-type(4){
  background: pink;
}